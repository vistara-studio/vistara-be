# Vistara Backend Environment Configuration

# Application Configuration
APP_NAME=Vistara Backend
APP_PORT=8080
APP_ENV=development

# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USERNAME=vistara_user
POSTGRES_PASSWORD=vistara_password
POSTGRES_DB=vistara_db
POSTGRES_SSL=disable

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRY_HOURS=24

# Midtrans Payment Configuration
MIDTRANS_SERVER_KEY=your-midtrans-server-key
MIDTRANS_CLIENT_KEY=your-midtrans-client-key
MIDTRANS_IS_PRODUCTION=false

# Supabase Storage Configuration
SUPABASE_URL=your-supabase-url
SUPABASE_KEY=your-supabase-anon-key
SUPABASE_BUCKET=vistara-storage

# Logging Configuration
LOG_LEVEL=info

# AI Service Configuration
VISTARA_AI_URL=http://host.docker.internal:5000
VISTARA_AI_KEY=vistara-secret-key
